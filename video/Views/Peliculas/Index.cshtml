@model IEnumerable<video.Data.Peliculas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Peliculas</h2>

<p>
    <div class="btn btn-success glyphicon glyphicon-plus">
        @Html.ActionLink(" ", "Create")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorias.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorias.nombre)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id},new { @class= "btn btn-warning glyphicon glyphicon-edit" }) 
            @Html.ActionLink(" ", "Details", new { id=item.Id }, new { @class = "btn btn-info glyphicon glyphicon-file" }) 
            @Html.ActionLink(" ", "Delete", new { id=item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
